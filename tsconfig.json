{
  "include": ["lib/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib/**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "./dist",
    "noLib": false,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "strict": true,
    "typeRoots": [ "./node_modules/@types" ]
  }
}